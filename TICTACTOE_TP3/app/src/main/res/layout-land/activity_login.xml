<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/nomDuJeu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="30dp"
        android:gravity="start|center_horizontal|end"
        android:padding="0dp"
        android:paddingTop="15dp"
        android:shadowColor="#DBEBE6E6"
        android:text="TIC TAC TOE"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/blue2"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:gravity="center"
        android:padding="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/Joueur1"
            android:textColor="@color/whiteCream"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/joueur1Nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/Nomdujoueur1"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@color/whiteCream"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/Joueur2"
            android:textColor="@color/whiteCream"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/joueur2Nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/Nomdujoueur2"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@color/whiteCream"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/JouerBtn"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/blue1"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/Jouer"

        android:textColor="@color/yellowNeon"
        android:textSize="20dp" />

</LinearLayout>